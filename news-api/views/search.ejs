<% include partials/header %>

<div class="ui main container segment">
  <div class="ui divided items">
    <% for (let i = 0; i < data.articles.length; i++) { %>
    <div class="item">
      <div class="ui medium image">
        <img src="<%= data.articles[i].urlToImage %>">
      </div>
      <div class="ui middle aligned content">
        <a href="<%= data.articles[i].url %>" class="header"><%= data.articles[i].title %></a>
        <div class="meta">
          <span><%= data.articles[i].publishedAt %></span>
        </div>
        <div class="description">
          <p><%= data.articles[i].description %></p>
        </div>
        <a class="ui right floated primary button" href="<%= data.articles[i].url %>">
          Find Out More
          <i class="right chevron icon"></i>
        </a>
      </div>
    </div>
    <% } %>
  </div>
</div>

<% include partials/footer %>